<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="database" />
        <exclude domain="sharedpref" path="encrypted_prefs" />
        <exclude domain="file" path="keys/" />
    </cloud-backup>
    <device-transfer>
        <!-- Allow basic app data transfer but exclude sensitive keys -->
        <exclude domain="database" />
        <exclude domain="file" path="keys/" />
    </device-transfer>
</data-extraction-rules>